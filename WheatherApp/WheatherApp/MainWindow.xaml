<Window x:Class="WheatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WheatherApp"
        mc:Ignorable="d"
        Title="Pogodynka" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="wyswietlacz" FontSize="30" Text="Jaka pogoda" />
        <Button Grid.Row="1" Content="Pobierz pogodę" Click="Button_Click"/>
    </Grid>
</Window>
